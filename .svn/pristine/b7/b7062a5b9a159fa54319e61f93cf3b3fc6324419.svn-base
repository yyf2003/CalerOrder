<script type="text/javascript">

    Sys.WebForms.PageRequestManager.getInstance().add_beginRequest(function (sender, e) {
        var eleId = e.get_postBackElement().id;

        if (eleId.indexOf("ddlCustomer") != -1) {
            $("#loadRegion").show();
            $("#loadProvince").show();
            $("#loadChannel").show();
            $("#loadFormat").show();
            $("#loadSheet").show();
            $("#loadCornerType").show();
            $("#loadFrame").show();
        }
        if (eleId.indexOf("cblRegion") != -1) {
            $("#loadProvince").show();
            $("#loadChannel").show();
            $("#loadFormat").show();
            $("#loadSheet").show();
            $("#loadCornerType").show();
            $("#loadFrame").show();
        }
        if (eleId.indexOf("cblProvince") != -1) {
            $("#loadChannel").show();
            $("#loadFormat").show();
            $("#loadSheet").show();
            $("#loadCornerType").show();
            $("#loadFrame").show();
        }
        if (eleId.indexOf("cblChannel") != -1) {
            $("#loadFormat").show();
            $("#loadSheet").show();
            $("#loadCornerType").show();
            $("#loadFrame").show();
        }
        if (eleId.indexOf("cblFormat") != -1) {
            $("#loadSheet").show();
            $("#loadCornerType").show();
            $("#loadFrame").show();
        }

        if (eleId.indexOf("cblSheet") != -1) {
            $("#loadCornerType").show();
            $("#loadFrame").show();
        }

        if (eleId.indexOf("cblCornerType") != -1) {
            $("#loadFrame").show();
        }
    })

    Sys.WebForms.PageRequestManager.getInstance().add_pageLoaded(function () {

        $(".loading").hide();
//        $("#loadRegion").hide();
//        $("#loadProvince").hide();
//        $("#loadChannel").hide();
//        $("#loadFormat").hide();
//        $("#loadSheet").hide();
//        $("#loadCornerType").hide();
//        $("#loadFrame").hide();

    })





    //解决jquery库的冲突，很重要！
    var $j = jQuery.noConflict();

    $j(function () {
        $j("#btnImport").on("click", function () {
            var customerId = $j("#ddlCustomer").val() || "0";
            if (customerId == "0") {
                alert("请选择客户");
                return false;

            }
            var url = "ImportMachineFrame.aspx?customerId=" + customerId;
            $j("#hfIsFinishImport").val("");
            $j.fancybox({
                href: url,
                type: 'iframe',
                padding: 5,
                width: "90%",
                afterClose: function () {
                    if ($j("#hfIsFinishImport").val() == "1") {
                        $j("#btnSearch").click();
                    }
                }
            })
        })
    })



    
</script>